<launch>
  <!-- load OMPL planning pipeline, but add the STOMP planning adapter. -->
  <include file="$(find prl_ur5_moveit_config)/launch/ompl_planning_pipeline.launch.xml">
    <arg name="planning_adapters" value="
       default_planner_request_adapters/AddTimeParameterization
       default_planner_request_adapters/FixWorkspaceBounds
       default_planner_request_adapters/FixStartStateBounds
       default_planner_request_adapters/FixStartStateCollision
       default_planner_request_adapters/FixStartStatePathConstraints
       stomp_moveit/StompSmoothingAdapter"
       />
  </include>
  <!-- load stomp config -->
  <rosparam command="load" file="$(find prl_ur5_moveit_config)/config/$(arg setup)/stomp_planning.yaml"/>
  <!-- override trajectory_initialization_method -->
  <param name="trajectory_initialization_method" value="fillTrajectory"/>
</launch>